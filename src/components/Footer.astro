<style>
  .wrap {
    width: 100%;
    max-width: 95%;
    margin: 0 auto;
  }
  .card-face img {
    border-radius: 100%;
    height: 120px;
    position: absolute;
    top: -40px;
    left: -50px;
    border: solid 10px;
    border-color: var(--white);
  }

  .card-face {
    position: absolute;
    background-color: var(--white);
    right: 50%;
    bottom: 30%;
    transform: translateX(50%);
    height: 250px;
    width: 500px;
    z-index: 10;
    border-radius: 25px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-family: var(--serif-font);
  }

  .card-face span {
    font-weight: bold;
  }

  .contact {
    font-size: 2rem;
  }

  .white-box {
    height: 60%;
    background-color: var(--white);
    background-image: url(../img/RamaBG.jpg);
    background-position: 50% 30%;
    background-size: cover;
  }

  .black-box {
    height: 40%;
    background-color: black;
    display: flex;
    align-items: end;
  }

  .footer {
    height: 100svh;
    position: relative;    
  }

  .socials {
    width: 40%;
    display: flex;
    gap: 4rem;
  }

  .footer-text {
    display: flex;
    justify-content: space-between;
  }

  .footer-text p,
  a {
    color: white;
    text-decoration: none;
    font-size: 1rem;    
  }

  @media screen and (max-width: 640px) {
    .card-face {
      height: 20%;
      width: 50%;
      min-width: 250px;
      font-size: 1.3rem;
    }
    .card-face img {
      height: 60%;
      top: -50px;
      border: solid 5px;
      border-color: var(--white);
    }
    .footer-text p,
  a {    
    font-size: 0.8rem;
    text-align: center;    
  }
  .footer-text {
    flex-direction: column;     
  }
  .socials {
    width: 100%;
    justify-content: space-around;
    padding-bottom: 15px;
  }
  .contact {
    font-size: 1.3rem;
  }
  }

  .floater {
    position: absolute;
    right: 3%;
    bottom: 12%;
    z-index: 500;
    color: var(--accent);
  }

  .floater:hover {
    transform: scale(115%);
    transition-duration: 1s;
  }

  @media screen and (max-width: 528px){
    .white-box {            
    background-position: 70% 30%;    
  }
  }
  @media screen and (max-width: 400px){
    .socials {    
    justify-content: space-around;
    gap: 0;
  }
  .card-face img {
      height: 55%;
      top: -50px;
      left: 50%;
      transform: translateX(-50%);
      border: solid 2px;
      border-color: var(--white);
    }
  }
</style>
