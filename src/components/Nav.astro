---
import logo from "../img/rfslogoborder.png";
---

<div class="contenedor barra">
  <a href="#">
    <img src={logo} alt="logotipo" />
  </a>
  <nav class="navegacion">
    <a href="/">Inicio</a>    
    <a href="/about">Sobre m√≠</a>
    <a href="/portfolio">Portfolio</a>
    <a href="/contact">Contacto</a>
  </nav>
</div>

<style>
  .header {
    padding: 1rem 0;
  }
  .header img {
    width: 8rem;
  }

  .barra {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  @media (min-width: 768px) {
    .barra {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .navegacion {
    margin-top: 5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .navegacion {
      margin: 0;
    }
  }
  .navegacion a {
    color: var(--white);
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: 0.5rem;
    transition-property: background-color;
    transition-duration: 300ms;
  }
  .navegacion a:hover,
  .active {
    background-color: var(--primary);
  }  
</style>
